#!/usr/bin/env ruby
require 'bundler/setup'
require 'dotenv'
Dotenv.load

require_relative '../lib/sse_server'
if count = ARGV.detect {|arg| arg.start_with?('N=') }
  ARGV.delete(count)
  count = count[/(\d+)/, 1].to_i
else
  count = 1
end
count.times do
  puts "Event ##{ SSEServer.publish ARGV[0], ARGV[1] => ARGV[2] } published"
end
