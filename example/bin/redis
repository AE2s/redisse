#!/usr/bin/env ruby
require 'bundler/setup'
require 'dotenv'
Dotenv.load

puts "Starting Redis server on 127.0.0.1:#{ENV['REDIS_PORT']}"
Process.exec 'redis-server ' \
  '--daemonize no '          \
  '--port $REDIS_PORT '      \
  '--bind 127.0.0.1 '        \
  '--logfile /dev/null '     \
  '--databases 1'
